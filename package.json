{
  "name": "poze-api",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev:db:up": "docker-compose up -d",
    "dev:db:down": "docker-compose down",
    "dev:db:reset": "docker-compose down -v && docker-compose up -d",
    "dev:db:test": "node test-db.js",
    "dev:db:shell": "docker exec -it myapp-postgres psql -U myuser -d mydatabase",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "@neondatabase/serverless": "^1.0.1",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.5",
    "hono": "^4.9.4",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3"
  }
}